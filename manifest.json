{
  "manifest_version": 3,
  "name": "ClauseCode AI",
  "version": "1.0",
  "description": "Ask AI questions about the current page",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>", "https://api.openai.com/*", "https://serpapi.com/*", "https://gwc-hq4r.onrender.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}